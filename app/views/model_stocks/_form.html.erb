    <%= t('model_stock.edit.status') %>
    <%= form.select :status, options_for_select(model_stock_status_list, @model_stock.status)%>
  </div>

  <div class="field">
    <%= t('model_stock.edit.group1') %>
    <%= form.select :group1, options_for_select(model_stock_group1_list, @model_stock.group1)%>
    <%= t('model_stock.edit.remark1') %>
    <%= form.text_field :remark1 %>
  </div>

  <div class="field">
    <%= t('model_stock.edit.group2') %>
    <%= form.select :group2, options_for_select(model_stock_group2_list, @model_stock.group2)%>
    <%= t('model_stock.edit.remark2') %>
    <%= form.text_field :remark2 %>
  </div>

  <div class="field">
    <%= t('model_stock.edit.group3') %>
    <%= form.select :group3, options_for_select(model_stock_group3_list, @model_stock.group3)%>
