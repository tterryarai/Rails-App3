<%= form_with(model: model_stock, local: true) do |form| %>

<div class='ms_details'>

  <% if model_stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(model_stock.errors.count, "error") %> prohibited this model_stock from being saved:</h2>
      <ul>
      <% model_stock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
