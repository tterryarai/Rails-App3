
<% cl = 'operation_1 model_stock_operation_1' %>

<div class='operation model_stock_operation'>
  <%= link_to edit_model_stock_path(@model_stock), class: 'operation_link' do %>
    <div class="<%= cl %>">
      <p><%= t('common.button.edit')%></p>
    </div>
  <% end %>
  <div class="gap"></div>
  <%= link_to @model_stock, class: 'operation_link', method: :delete, data: { confirm: t('common.confirm.are_you_sure')} do %>
    <div class="<%= cl %>">
      <p><%= t('common.button.destroy')%></p>
    </div>
  <% end %>
  <div class="gap"></div>
  <%= link_to model_stocks_path(page: @page, group1: @group1), class: 'operation_link' do %>
    <div class="<%= cl %>">
      <p><%= t('common.button.back')%></p>
    </div>
  <% end %>
</div>

<% debug 'show', 'page is set:[' + @page.to_s + ']' %>
<% debug 'show', 'group1 is set:[' + @group1.to_s + ']' %>

<div class='ms_details'>

<p>
  <strong><%= t('model_stock.show.name')%></strong>
  <%= @model_stock.name %>
</p>

<p>
  <strong><%= t('model_stock.show.status')%></strong>
  <%= t('model_stock.status.elem' + @model_stock.status.to_s) %>
</p>

<p>
  <strong><%= t('model_stock.show.group1')%></strong>
  <%= model_stock_fix_group1(@model_stock) %>
</p>

<p>
  <strong><%= t('model_stock.show.group2')%></strong>
  <%= model_stock_fix_group2(@model_stock) %>
</p>

<p>
  <strong><%= t('model_stock.show.group3')%></strong>
  <%= model_stock_fix_group3(@model_stock) %>
</p>

<p>
  <strong><%= t('model_stock.show.scale')%></strong>
  <%= model_stock_fix_scale(@model_stock) %>
</p>

<p>
  <strong><%= t('model_stock.show.provider')%></strong>
  <%= model_stock_fix_provider(@model_stock) %>
</p>

<p>
  <strong><%= t('model_stock.show.desc')%></strong>
  <%= @model_stock.desc %>
</p>

</div>

