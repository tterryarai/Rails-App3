
<% cl = 'operation_1 stamp_operation_1' %>

<div class='operation stamp_operation'>
  <%= link_to edit_stamp_path(@stamp), class: 'operation_link' do %>
    <div class="<%= cl %>">
      <p><%= t('common.button.edit')%></p>
    </div>
  <% end %>
  <div class="gap"></div>
  <%= link_to @stamp, class: 'operation_link', method: :delete, data: { confirm: t('common.confirm.are_you_sure')} do %>
    <div class="<%= cl %>">
      <p><%= t('common.button.destroy')%></p>
    </div>
  <% end %>
  <div class="gap"></div>
  <%= link_to stamps_path(page: @page, group1: @group1), class: 'operation_link' do %>
    <div class="<%= cl %>">
      <p><%= t('common.button.back')%></p>
    </div>
  <% end %>
</div>

<% debug 'show', 'page is set:[' + @page.to_s + ']' %>
<% debug 'show', 'group1 is set:[' + @group1.to_s + ']' %>

<div class='stamp_details'>

<p>
  <strong><%= t('stamp.show.name')%></strong>
  <%= @stamp.name %>
</p>

<p>
  <strong><%= t('stamp.show.price')%></strong>
  <%= @stamp.price %>
</p>

<p>
  <strong><%= t('stamp.show.status')%></strong>
  <%= t('stamp.status.elem' + @stamp.status.to_s) %>
</p>

<p>
  <strong><%= t('stamp.show.group1')%></strong>
  <%= t('stamp.group1.elem' + @stamp.group1.to_s) %>
</p>

<p>
  <strong><%= t('stamp.show.group2')%></strong>
  <%= t('stamp.group2.elem' + @stamp.group2.to_s) %>
</p>

<p>
  <strong><%= t('stamp.show.group3')%></strong>
  <%= stamp_fix_group3(@stamp) %>
</p>

<p>
  <strong><%= t('stamp.show.remark5')%></strong>
  <%= @stamp.remark5 %>
</p>

<p>
  <strong><%= t('stamp.show.issue_date')%></strong>
  <%= @stamp.issue_date %>
</p>

<p>
  <strong><%= t('stamp.show.image_path')%></strong>
  <%= @stamp.image_path %>
</p>

<%= image_tag stamp_image(@stamp), alt: @stamp.name, width: Stamp.image_width %>

<p>
  <strong><%= t('stamp.show.remark4')%></strong>
  <%= @stamp.remark4 %>
</p>

<p>
  <strong><%= t('stamp.show.leaf_id')%></strong>
  <%= @stamp.leaf_id.to_s %>
</p>

<p>
  <strong><%= t('stamp.show.desc')%></strong>
  <%= @stamp.desc %>
</p>

</div>

